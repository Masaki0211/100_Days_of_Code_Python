def treasure_island():
    print("Welcome to Treasure Island.")
    print("Your mission is to find the treasure.")
    print("You're at a cross road. Where do you want to go?")

    first_choice = input('\tType "left" or "right"\n')
    if first_choice == "left":
        print("You've come to a lake. There is an island in the middle of the lake.")
    elif first_choice == "right":
        print("Fall into a hole.")
        print("Game Over.")
        return
    else:
        print("Wrong input! You need to restart the game.")
        return


    second_choice = input('\tType "wait" to wait for a boat. Type "swim" to swim across.\n')
    if second_choice == "wait":
        print("You arrive at the island unharmed. There is a house with 3 doors.")
    elif second_choice == "swim":
        print("Attacked by trout.")
        print("Game Over.")
        return
    else:
        print("Wrong input! You need to restart the game.")
        return

    last_choice = input('\tOne red, one yellow and one blue. Which color do you choose?\n')
    if last_choice == "blue":
        print("Eaten by beasts.")
        print("Game Over.")
    elif last_choice == "yellow":
        print("You Win!")
    elif last_choice == "red":
        print("Burned by fire.")
        print("Game Over.")
    else:
        print("Game Over.")








treasure_island()
